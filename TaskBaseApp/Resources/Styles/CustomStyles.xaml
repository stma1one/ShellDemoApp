<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TaskBaseApp.Views">
    <Style x:Key="baseEntry" TargetType="Entry">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="TextColor" Value="{AppThemeBinding Dark=Wheat, Light=Black}" />



    </Style>

    <Style
        x:Key="passwordEntryStyle"
        BasedOn="{StaticResource baseEntry}"
        TargetType="Entry">
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>



    <LinearGradientBrush x:Key="backgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0.0" Color="LightCyan" />
        <GradientStop Offset="0.5" Color="#3a7bd5" />
        <GradientStop Offset="1.0" Color="Purple" />
    </LinearGradientBrush>

    <Style ApplyToDerivedTypes="True" TargetType="ContentPage">
        <Setter Property="Background" Value="{StaticResource backgroundBrush}" />

    </Style>
    <Style ApplyToDerivedTypes="True" TargetType="Shell">
        <Setter Property="BackgroundColor" Value="AliceBlue" />
    </Style>

    <Style x:Key="CardBorder" TargetType="Border">
        <Setter Property="StrokeShape" Value="RoundRectangle 10" />
        <Setter Property="Stroke" Value="{StaticResource Amber200}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Card}" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow
                    Brush="{StaticResource Gray400}"
                    Opacity="0.1"
                    Radius="2"
                    Offset="0,2" />
            </Setter.Value>
        </Setter>
    </Style>
    <Color x:Key="Card">#FFFFFFFF</Color>
</ResourceDictionary>