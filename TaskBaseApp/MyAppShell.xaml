<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskBaseApp.MyAppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaskBaseApp.Views"
    xmlns:viewmodel="clr-namespace:TaskBaseApp.ViewModels"
    Title="TaskBaseApp"
    x:DataType="viewmodel:AppShellViewModel"
    FlowDirection="RightToLeft">
    <Shell.TitleView>
        <Button
            Margin="5"
            BackgroundColor="Wheat"
            Command="{Binding LogoutCommand}"
            HorizontalOptions="Start"
            ImageSource="logout.png"
            WidthRequest="80" />
    </Shell.TitleView>

    <Tab Title="חיבור" Icon="add.png">
        <ShellContent
            Title="הוסף משימה"
            ContentTemplate="{DataTemplate local:AddTaskPage}"
            Icon="add.png"
            Route="AddNewTaskPage" />
        <ShellContent
            Title="משימות"
            ContentTemplate="{DataTemplate local:UserTasksPage}"
            Icon="view.png"
            Route="UserTaskPage" />

    </Tab>
    <Tab Title="פרופיל" Icon="profile.png">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:UserProfilePage}"
            Route="UserProfilePage" />
    </Tab>





</Shell>

